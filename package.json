{
  "name": "degenplays_automation",
  "version": "0.0.3",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "description": "Degen Plays Automation Client",
  "author": "DegenPlays",
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "chromedriver": "^119.0.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0",
    "react-scripts": "^5.0.1",
    "selenium-webdriver": "^4.15.0",
    "socket.io-client": "^4.7.2"
  },
  "scripts": {
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build": "craco build",
    "start": "electron .",
    "deploy": "node scripts/prebuild.js && npm run build && npx electron-builder build",
    "dev": "craco build &&  electron ."
  },
  "build": {
    "files": [
      ".env"
    ],
    "win": {
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "DegenPlays",
        "repo": "react_electron_client"
      }
    ],
    "appId": "club.degenplays.DegenAutomation",
    "asar": true,
    "extraFiles": [
      {
        "from": "./src/automations",
        "to": "automations",
        "filter": [
          "**/*"
        ]
      },
      {
         "from": "./node_modules/tmp",
         "to": "node_modules/tmp",
         "filter": [
            "**/*"
         ]
      },
      {
         "from": "./node_modules/jszip",
         "to": "node_modules/jszip",
         "filter": [
            "**/*"
         ]
      },
      {
         "from": "./node_modules/pako",
         "to": "node_modules/pako",
         "filter": [
            "**/*"
         ]
      },
      {
         "from": "./node_modules/crypto-js",
         "to": "node_modules/crypto-js",
         "filter": [
            "**/*"
         ]
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "10.2.0",
    "electron-builder": "^24.6.4"
  }
}
